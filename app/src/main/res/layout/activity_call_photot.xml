<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".eighth_multimedia.photo.CallPhototActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <Button
        android:id="@+id/btn_call_the_camera"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:text="@string/调用相机"
        android:background="@drawable/btn_bg_rectangle_selector"
        style="?attr/borderlessButtonStyle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/btn_call_the_photo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:text="@string/从相册中选取照片"
        android:background="@drawable/btn_bg_rectangle_selector"
        style="?attr/borderlessButtonStyle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>